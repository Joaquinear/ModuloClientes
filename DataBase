create table persona(
Ci int not null,
Nombres varchar(100) not null,
Apellido_Paterno varchar(50)  not null,
Apellido_Materno varchar(50) not null,
Telefono int not null,
Direccion varchar(200) not null,
Email varchar(100) not null,
primary key (Ci)
);

create table roles(
    Id_Role int not null auto_increment,
    Nombre varchar(30),
    descripcion varchar(30),
    primary key(Id_Role)
);

create table estado(
    Id_Estado int not null auto_increment,
    Estado varchar(30),
    primary key(id_Estado)
);

create table trabajador(
Id_Trabajar int not null auto_increment,
id_Role INT NOT NULL,
usuario varchar(50) not null,
contrasenha varchar(50) not null,
Id_Estado int not null,
Id_Persona_CI int not null,
primary key (Id_Trabajar),
foreign key id_Role references roles(Id_Role),
foreign key Id_Estado references estado(Id_Estado)
foreign key Id_Persona_CI references persona(Ci)
);

create table Cliente_Proveedor(
    Id_Cliente_Proveedor int not null auto_increment,
    Id_Persona_CI INT NOT NULL,
    Nit int not null,
    primary key (Id_Cliente_Proveedor),
    foreign key Id_Persona_CI references persona(Ci)
);

create table Producto(
    Id_Produto int not null auto_increment,
    Nombre_Producto varchar(50) not null,
    Descripcion_Productos varchar(100) not null,
    Fabricante varchar(50) not null,
    Cantidad int not null,
    Precio_Unitario double(10,2) not null
    primary key(Id_Produto)
);

create table Venta(
    Id_Venta int not null auto_increment,
    Fecha date not null,
    Cantidad int not null,
    Precio double(10,2) not null,
    Id_Producto int not null,
    primary key (Id_Venta),
    foreign key (Id_Producto) references Producto(Id_Producto)
);
create table Venta_Cliente_Proeveedor(
    Id_Cliente_P_venta int not null auto_increment,
    Id_Cliente_Proveedor int not null,
    Fecha date not null,
    Id_venta int not null,
    Precio_Total double(10,2) not null,
    Cantidad int not null,
    Gestion int not null,
    Id_Trabajar int not null,
    primary key (Id_Cliente_P_venta),
    foreign key (Id_Cliente_Proveedor) references Id_Cliente_Proveedor(Id_Cliente_Proveedor),
    foreign key (Id_venta)references Venta (Id_Venta),
    foreign key (Id_Trabajar) references trabajador(Id_Trabajar)
);

create table Compra_Producto(
    Id_Compra_Producto int not null auto_increment,
    Id_Producto int not null,
    Detalle varchar(200) not null,
    Fecha date not null,
    Precio_Compra double(10,2),
    primary key(Id_Compra_Producto),
    foreign key (Id_Producto) references Producto(Id_Producto)
);

create table Compra_Cliente(
    Id_Compra_Cliente int not null auto_increment,
    Fecha_Compra date not null,
    Cantidad int not null,
    Precio_Total_Compra double(10,2) not null,
    Gestion int not null,
    Id_Compra_Producto int not null,
    Id_Cliente_Proveedor INT NOT null,
    Id_Trabajar int not null,
    primary key (Id_Compra_Cliente),
    foreign key (Id_Compra_Producto) references Compra_Producto(Id_Compra_Producto),
    foreign key (Id_Cliente_Proveedor) references Cliente_Proveedor(Id_Cliente_Proveedor),
    foreign key (Id_Trabajar) references trabajador(Id_Trabajar)
);