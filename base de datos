create table persona
(
	codPersona int auto_increment Primary Key,
    nombre varchar(50),
    apepat varchar(50),
    apemat varchar(50),
    ci varchar(15),
    telefono varchar(10),
    direccion varchar(100)
);

create table ciudad
(
    codCiudad int auto_increment primary key,
    nombre varchar(50),
    estado char(1)
);
create table sucursal
(
    codSucursal int auto_increment primary key,
    nombre varchar(50),
    direccion varchar(100),
    codCiudad int,
    FOREIGN KEY (codCiudad) REFERENCES ciudad(codCiudad)
);
    

create table rol
(
    codRol int auto_increment primary key,
    nombre varchar(15),
    descripcion varchar(50)
);


create table usuario
(
    codUsuario int auto_increment primary key,
    codPersona int,
    usuario varchar(20),
    contrasenha varchar(20),
    estado char(1),
    codRol int,codPersona
    foreign key (codPersona) references persona(codPersona),
    foreign key (codRol) references rol(codRol)
);
create table reserva
(
    codReserva int auto_increment primary key,
    codUsuario int,
    fechaIngreso date,
    fechaSalida date,
    cantidadPersonas int,
    foreign key (codUsuario) references usuario(codUsuario)
);
create table suscripcion
(
    codSuscripcion int auto_increment primary key,
    codUsuario int,
    fechaInicio date,
    fechaFin date,
    estado int,
    foreign key (codUsuario) references usuario(codUsuario)
);

create table paquete
(
    codPaquete int auto_increment primary key,
    nombre varchar(200),
    precio float(10,2)
);


create table tipoplan
(
	codTipoPlan int auto_increment primary key,
	nombre float(10,2)
);
create table plan
(
	codPlan int auto_increment primary key,
    codUsuario int,
	codPaquete int,
	codTipoPlan int,
	fechaRegistro date,
	foreign key (codUsuario) references usuario(codUsuario),
    foreign key (codPaquete) references paquete(codPaquete),
    foreign key (codTipoPlan) references tipoplan(codTipoPlan)
);
create table pago
(
		codPago int auto_increment primary key,
		codPlan int,
		monto float(10,2),
		fecha datetime,
		foreign key (codPlan) references plan(codPlan)
);
create table cuota
(
	codCuota int auto_increment primary key,
	codPlan int,
	monto float(10,2),
	foreign key (codPlan) references plan(codPlan)
);




    